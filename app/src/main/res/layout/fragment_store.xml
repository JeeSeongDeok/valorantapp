<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/storeFragment"
    android:background="#F5F5F5"
    tools:context="com.example.valorant.fragment.StoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="나만의 상점"
            android:textSize="30dp"
            android:textColor="@color/primary"
            android:textAlignment="center"
            android:fontFamily="@font/scdream9"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/connectBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="\?"
            android:textSize="30dp"
            android:textColor="@color/primaryVariant"
            android:fontFamily="@font/scdream9"
            android:background="@color/primary"/>

        <ImageView
            android:id="@+id/gunImageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#1C252E"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/gunTextView1"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/scdream9"
            android:background="#FF4654"
            android:text=""
            android:textColor="#F9F9F9"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/gunImageView2"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#1C252E" />
        <TextView
            android:id="@+id/gunTextView2"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/scdream9"
            android:background="#FF4654"
            android:text=""
            android:textColor="#F9F9F9"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/gunImageView3"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#1C252E" />
        <TextView
            android:id="@+id/gunTextView3"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/scdream9"
            android:background="#FF4654"
            android:text=""
            android:textColor="#F9F9F9"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/gunImageView4"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#1C252E" />
        <TextView
            android:id="@+id/gunTextView4"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/scdream9"
            android:background="#FF4654"
            android:text=""
            android:textColor="#F9F9F9"
            android:gravity="center_vertical"/>


    </LinearLayout>

</RelativeLayout>